#ifndef __BATTERY_SERVICE_DB__
#define __BATTERY_SERVICE_DB__
#include "battery_uuids.h"

/* For service details, refer http://developer.bluetooth.org/gatt/services/ 
 * Pages/ServiceViewer.aspx?u=org.bluetooth.service.generic_access.xml 
 */

primary_service {
    uuid : BATTERY_SERVICE_UUID,
    name : "BATTERY_SERVICE", /* Name will be used in handle name macro */

/* Battery level characteristic supports IRQ flag, thereby reads and writes on 
 * characteristic value are handled by application. Read and write access to  
 * battery level characteristic value requires encryption to be enabled. If 
 * read and write operation is performed without encrypting the link, ATT will 
 * report 'Insufficient Encryption' error to the connected central/collector.
 */
    
    characteristic {
        uuid : BATTERY_LEVEL_UUID,
        name : "BATT_LEVEL",
        flags : [FLAG_IRQ, FLAG_ENCR_R],
        properties : [read, notify],
        value : 0x00,
        
        client_config {
            flags : [FLAG_IRQ, FLAG_ENCR_W],
            name : "BATT_LEVEL_C_CFG"
        }

    }
}
#endif /* __BATTERY_SERVICE_DB__ */